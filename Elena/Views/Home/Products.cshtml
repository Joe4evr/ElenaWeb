@{
    
}

<div class="body-content">
    <h4>Gallery:</h4>
    <div class="row">
        @foreach (var product in Model.Products.Where(p => p.IsAvailable))
        {
            <div class="well well-sm col-lg-3">
                <a href="../detail/@product.Id">
                    @product.Name<br />
                    @if (!String.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="~/img/paintings/@product.ImagePath" class="img-thumbnail" /><br />
                    }
                    &euro; @product.Price
                </a>
            </div>
        }
    </div>
</div>
